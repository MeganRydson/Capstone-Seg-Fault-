<% include partials/header %>


        <title>SegFault | Devices</title>
        
    </head>
    <body>
        
<% include partials/navbar %>

    <h1>Devices</h1>
    
    <br>
    
    <form class="add-form" action="/devices" method="POST">
        <div class="ui form">
            <div class="fields">
                <div class="field">
                    <label>Name</label>
                    <input type="text" name="dev_Name" placeholder="Name">
                </div>
                <div class="field">
                    <label>Serial #</label>
                    <input type="text" name="dev_SN" placeholder="Serial Number">
                </div>
                <div class="field">
                    <label>Description</label>
                    <input type="text" name="dev_Description" placeholder="Descripition">
                </div>
                <div class="field">
                    <input id="bottom" class="ui secondary button" type="submit" value="Add">
                </div>
            </div>
        </div>
    </form>
    
    <br>
    
    <table class="ui selectable inverted striped table">
        
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Serial #</th>
                <th>Description</th>
                <th>Available?</th>
                <th class="right aligned">Edit / Remove</th>
            </tr>
        </thead>
        
        <tbody>
            <% for(var i = 0; i < devices.length; i++){ %>
            <tr>
                <td><%= devices[i].dev_ID %></td>
                <td><%= devices[i].dev_Name %></td>
                <td><%= devices[i].dev_SN %></td>
                <td></button><%= devices[i].dev_Description %></td>
                <td>
                    <% if(devices[i].dev_Active === 0){ %>
                        Yes
                    <% } else { %>
                        No
                    <% } %>
                </td>
                <td class="right aligned">
                    
                    <button class="ui secondary button modal-pop" data-modal="<%= devices[i].dev_ID %>">Edit</button>
                    
                    <div class="ui tiny modal" data-modal="<%= devices[i].dev_ID %>">
                        <div class="header">Edit <%= devices[i].dev_Name %></div>
                        <div class="content">
                            <form action="/devices_edit" method="POST">
                                <input type="hidden" name ="e_dev_ID" value="<%= devices[i].dev_ID %>">
                                <div class="ui form">
                                    <div class="field">
                                        <label>Name</label>
                                        <input type="text" name="e_dev_Name" value="<%= devices[i].dev_Name %>">
                                    </div>
                                    <div class="field">
                                        <label>Serial Number</label>
                                        <input type="text" name="e_dev_SN" value="<%= devices[i].dev_SN %>">
                                    </div>
                                    <div class="field">
                                        <label>Description</label>
                                        <input type="text" name="e_dev_Description" value="<%= devices[i].dev_Description %>">
                                    </div>
                                    <div class="field">
                                        <label>Available?</label>
                                        <select class="ui search dropdown" name="e_dev_Active">
                                            <% if(devices[i].dev_Active === 0){ %>
                                                <option value="0">Yes</option>
                                                <option value="1">No</option>
                                            <% } else { %>
                                                <option value="1">No</option>
                                                <option value="0">Yes</option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <br>
                                    <div class="ui buttons">
                                        <input class="ui positive button" type="submit" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <form action="/devices_remove" method="POST">
                        <input type='hidden' name='dev_ID' value="<%= devices[i].dev_ID %>">
                        <input class="ui secondary button" type="submit" value="Remove">
                    </form>
                    
                </td>
            </tr>
            <% } %>
        </tbody>
        
    </table>
    

<% include partials/footer %>