<% include partials/header %>


        <title>SegFault | Locations</title>

    </head>
    <body>

<% include partials/navbar %>

    <h1>Locations</h1>
    
    <br>
    
    <form class="add-form" action="/locations" method="POST">
        <div class="ui form">
            <div class="fields">
                <div class="field">
                    <label>Name</label>
                    <input type="text" name="loc_Name" placeholder="Name">
                </div>
                <div class="field">
                    <input id="bottom" class="ui secondary button" type="submit" value="Add">
                </div>
            </div>
        </div>
    </form>
    
    <table id="locations-table" class="ui selectable inverted striped small table">
        
        <thead>
            <tr>
                <th>ID</th>
                <th>Locations</th>
                <th class="right aligned">Edit / Remove</th>
            </tr>
        </thead>
        
        <tbody>
            <% for(var i = 0; i < locations.length; i++){ %>
            <tr>
                <td><%= locations[i].loc_ID %></td>
                <td><%= locations[i].loc_Name %></td>
                <td class="right aligned">
                    
                    <a class="ui secondary mini button edit-button" href="/locations/<%= locations[i].loc_ID %>/edit">Edit</a>
                    
                    <button class="ui secondary mini button remove-button" data-modal="<%= locations[i].loc_ID %>">Remove</button>
                    
                    <div class="ui mini modal" data-modal="<%= locations[i].loc_ID %>">
                        <div class="header">Delete <%= locations[i].loc_Name %>?</div>
                        <div class="actions">
                            <div class="ui deny button">
                                No
                            </div>
                            <form action="/locations_remove" method="POST">
                                <input type='hidden' name='loc_ID' value="<%= locations[i].loc_ID %>">
                                <input class="ui red button" type="submit" value="Delete">
                            </form>
                        </div>
                    </div>
                    
                </td>
            </tr>
            <% } %>
        </tbody>
        
    </table>


<% include partials/footer %>