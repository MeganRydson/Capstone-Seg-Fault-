<% include partials/header %>


        <title>SegFault | Locations</title>

    </head>
    <body>

<% include partials/navbar %>

    <h1>Locations</h1>
    
    <br>
    
    <form class="add-form" action="/locations" method="POST">
        <div class="ui form">
            <div class="fields">
                <div class="field">
                    <label>Name</label>
                    <input type="text" name="loc_Name" placeholder="Name">
                </div>
                <div class="field">
                    <input id="bottom" class="ui secondary button" type="submit" value="Add">
                </div>
            </div>
        </div>
    </form>
    
    <table class="ui selectable inverted striped small table">
        
        <thead>
            <tr>
                <th>ID</th>
                <th>Locations</th>
                <th class="right aligned">Edit / Remove</th>
            </tr>
        </thead>
        
        <tbody>
            <% for(var i = 0; i < locations.length; i++){ %>
            <tr>
                <td><%= locations[i].loc_ID %></td>
                <td><%= locations[i].loc_Name %></td>
                <td class="right aligned">
                    
                    <button class="ui secondary mini button edit-button modal-pop" data-modal="<%= locations[i].loc_ID %>">Edit</button>
                    
                    <div class="ui tiny modal"  data-modal="<%= locations[i].loc_ID %>">
                        <div class="header">Edit <%= locations[i].dev_Name %></div>
                        <div class="content">
                            <form action="/locations_edit" method="POST">
                                <input type="hidden" name ="e_loc_ID" value="<%= locations[i].loc_ID %>">
                                <div class="ui form">
                                    <div class="field">
                                        <label>Name</label>
                                        <input type="text" name="e_loc_Name" value="<%= locations[i].loc_Name %>">
                                    </div>
                                    <br>
                                    <div class="ui buttons">
                                        <input class="ui positive button" type="submit" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <form action="/locations_remove" method="POST">
                        <input type='hidden' name='loc_ID' value="<%= locations[i].loc_ID %>">
                        <input class="ui secondary mini button remove-button" type="submit" value="Remove">
                    </form>
                    
                </td>
            </tr>
            <% } %>
        </tbody>
        
    </table>


<% include partials/footer %>