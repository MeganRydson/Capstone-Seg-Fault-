<% include partials/header %>


        <title>SegFault | Settlements</title>
        
    </head>
    <body>
        
<% include partials/navbar %>

    <h1>Settlements</h1>
    
    <br>
    
    <form class="add-form" action="/settlements" method="POST">
        <div class="ui form">
            <div class="fields">
                <div class="field">
                    <label>Name</label>
                    <input type="text" name="org_OrgName" placeholder="Name">
                </div>
                <div class="field">
                    <label>Budget Code</label>
                    <input type="text" name="org_BudgetCode" placeholder="Budget Code">
                </div>
                <div class="field">
                        <input id="bottom" class="ui secondary button" type="submit" value="Add">
                </div>
            </div>
        </div>
    </form>
    
    <br>

    <table class="ui selectable inverted striped table">
        
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Budget Code</th>
                <th class="right aligned">Edit / Remove</th>
            </tr>
        </thead>
        
        <tbody>
            <% for(var i = 0; i < organizations.length; i++){ %>
            <tr>
                <td><%= settlements[i].org_ID %></td>
                <td><%= settlements[i].org_OrgName %></td>
                <td><%= settlements[i].org_BudgetCode %></td>
                <td class="right aligned">
                    
                    <button class="ui secondary button modal-pop" data-modal="<%= settlements[i].org_ID %>">Edit</button>
                    
                    <div class="ui tiny modal"  data-modal="<%= settlements[i].org_ID %>">
                        <div class="header">Edit <%= settlements[i].org_OrgName %></div>
                        <div class="content">
                            <form action="/settlements" method="POST">
                                <input type="hidden" name ="e_org_ID" value="<%= settlements[i].org_ID %>">
                                <div class="ui form">
                                    <div class="field">
                                        <label>Name</label>
                                        <input type="text" name ="e_org_OrgName" value="<%= settlements[i].org_OrgName %>">
                                    </div>
                                    <div class="field">
                                        <label>Budget Code</label>
                                        <input type="text" name ="e_org_BudgetCode" value="<%= settlements[i].org_BudgetCode %>">
                                    </div>
                                    <br>
                                    <div class="ui buttons">
                                        <input class="ui positive button" type="submit" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <form action="/settlements_remove" method="POST">
                        <input type='hidden' name='org_ID' value="<%= settlements[i].org_ID %>">
                        <input class="ui secondary button" type="submit" value="Remove">
                    </form>
                    
                </td>
            </tr>
            <% } %>
        </tbody>
        
    </table>
    

<% include partials/footer %>